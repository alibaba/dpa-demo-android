<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="DeviceTagBinding">
        <variable
            name="showAllBtn"
            type="Boolean" />
        <import type="android.view.View" />
    </data>

    <merge
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@drawable/push_bg_advanced_func"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/push_device_tag"
            android:textColor="@color/push_color_text_black_deep"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="19dp"
            android:layout_height="19dp"
            tools:visibility="visible"
            android:layout_marginEnd="8dp"
            android:visibility="@{showAllBtn?View.VISIBLE:View.GONE}"
            android:src="@drawable/push_more"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvAll"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:visibility="visible"
            android:visibility="@{showAllBtn?View.VISIBLE:View.GONE}"
            android:text="@string/push_look_all"
            app:layout_constraintTop_toTopOf="@id/ivMore"
            app:layout_constraintBottom_toBottomOf="@id/ivMore"
            app:layout_constraintEnd_toStartOf="@id/ivMore"
            android:textSize="12sp"
            android:textColor="@color/push_color_text_black" />

        <com.alibaba.push.android.demo.LabelRecyclerView
            android:id="@+id/rvLabel"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_marginTop="4dp" />

    </merge>
</layout>